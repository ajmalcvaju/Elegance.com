    <script>
        async function addToCart(event, productId) {
            event.preventDefault();

            // Show success message
            successMessage();

            // Make an asynchronous request to add the product to the cart
            fetch(`/add-to-cart?id=${productId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        if (data.isProductInCart) {
                            failMessage();
                        } else if (data.notLogin) {
                            loginMessage();
                        } else {
                            successMessage();

                        }
                    } else {
                        console.error('Error:', data.message);
                    }
                })
                .catch(error => {
                    console.error(error);
                    // Handle error if needed
                });
        }

        function successMessage() {
            Swal.fire({
                text: 'Product successfully added to cart',
                icon: 'success',
                confirmButtonText: 'OK',
                customClass: {
                    title: 'text-success',
                    popup: 'swal2-popup-custom',
                    confirmButton: 'btn btn-success'
                },
                showCancelButton: false,
                showCloseButton: true,
                showLoaderOnConfirm: false,
                timer: 3000
            });
        }

        function failMessage() {
            Swal.fire({
                text: 'Product Already Present in the cart ',
                icon: 'error',
                confirmButtonText: 'OK',
                customClass: {
                    title: 'text-danger',
                    popup: 'swal2-popup-custom',
                    confirmButton: 'btn btn-danger'
                },
                showCancelButton: false,
                showCloseButton: true,
                showLoaderOnConfirm: false,
                timer: 3000
            });
        }
        function loginMessage() {
            Swal.fire({
                text: 'You have not Logged in in Your Account ',
                icon: 'error',
                confirmButtonText: 'OK',
                customClass: {
                    title: 'text-danger',
                    popup: 'swal2-popup-custom',
                    confirmButton: 'btn btn-danger'
                },
                showCancelButton: false,
                showCloseButton: true,
                showLoaderOnConfirm: false,
                timer: 3000
            });
        }
    </script>
    <script>
        async function addTowishlist(event, productId) {
            event.preventDefault();

            // Show success message


            // Make an asynchronous request to add the product to the cart
            fetch(`/addWishlist?id=${productId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        if (data.isProductInWishlist) {
                            failMessages();
                        } else if (data.notLogin) {
                            loginMessages();
                        } else {
                            successMessages();

                        }
                    } else {
                        console.error('Error:', data.message);
                    }
                })
                .catch(error => {
                    console.error(error);
                    // Handle error if needed
                });
        }

