<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Design by foolishdeveloper.com -->
  <title>Edit Coupons</title>

  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
  <!--Stylesheet-->
  <style media="screen">
    *,
    *:before,
    *:after {
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }

    body {
      background-color: #080710;
    }

    .background {
      width: 430px;
      height: 520px;
      position: absolute;
      transform: translate(-50%, -50%);
      left: 50%;
      top: 50%;
    }

    .background .shape {
      height: 200px;
      width: 200px;
      position: absolute;
      border-radius: 50%;
    }

    .shape:first-child {
      background: linear-gradient(#1845ad,
          #23a2f6);
      left: -80px;
      top: -80px;
    }

    .shape:last-child {
      background: linear-gradient(to right,
          #ff512f,
          #f09819);
      right: -30px;
      bottom: -80px;
    }

    form {
      height: auto;
      width: 400px;
      background-color: rgba(255, 255, 255, 0.13);
      position: absolute;
      transform: translate(-50%, -50%);
      top: 50%;
      left: 50%;
      border-radius: 10px;
      backdrop-filter: blur(10px);
      border: 2px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
      padding: 50px 35px;
    }

    form * {
      font-family: 'Poppins', sans-serif;
      color: #ffffff;
      letter-spacing: 0.5px;
      outline: none;
      border: none;
    }

    form h3 {
      font-size: 32px;
      font-weight: 500;
      line-height: 42px;
      text-align: center;
    }

    label {
            display: block;
            font-size: 10px;
            font-weight: 300;
        }

    input {
      display: block;
      height: 25px;
      width: 100%;
      background-color: rgba(255, 255, 255, 0.07);
      border-radius: 3px;
      padding: 0 10px;
      margin-top: 8px;
      font-size: 14px;
      font-weight: 300;
    }

    ::placeholder {
      color: #e5e5e5;
    }

    button {
            margin-top: 40px;
            width: 100%;
            background-color: #ffffff;
            color: #080710;
            padding: 12px 0;
            font-size: 15px;
            font-weight: 400;
            border-radius: 3px;
            cursor: pointer;
        }

    .social {
      margin-top: 30px;
      display: flex;
    }

    .social div {
      background: red;
      width: 150px;
      border-radius: 3px;
      padding: 5px 10px 10px 5px;
      background-color: rgba(255, 255, 255, 0.27);
      color: #eaf0fb;
      text-align: center;
    }

    .social div:hover {
      background-color: rgba(255, 255, 255, 0.47);
    }

    .social .fb {
      margin-left: 25px;
    }

    .social i {
      margin-right: 4px;
    }

    select {
      color: #080710;
    }

    option {
      color: #080710;
    }
    .error-message {
            color: red;
            font-size: 12px;
        }

        .is-invalid {
            border-color: red;
        }
        option{
            color: black;
        }
        #couponStatus{
            background-color: white;
        }
  </style>
</head>

<body>
  <div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
  </div>
  
       <form id="couponForm" action="/admin/edit-Coupons?id={{coupon._id}}" method="post">
    <h3>Edit Coupons</h3>
        
        <label for="">Coupon Code</label>
        <input type="text" name="couponCode" id="couponCode" placeholder="Coupon Code" onblur="validatecouponCode()" value="{{coupon.couponCode}}">
        <span id="couponCodeError" class="error-message"></span>
        
        <label for="">Description</label>
        <input type="text" name="description" id="description" placeholder="Description" value="{{coupon.description}}">
        <span id="descriptionError" class="error-message"></span>
          
          <label for="">Min Purchase Amount</label>
        <input type="number" name="minPurchaseAmount" id="minPurchaseAmount" min="0" placeholder="Min Purchase Amount"  value="{{coupon.minPurchaseAmount}}">
        <span id="minPurchaseAmountError" class="error-message"></span>

        <label>Discount (%)</label>
        <input type="number" name="discount" id="discount" placeholder="Discount" value="{{coupon.discount}}" min="0" max="90">
        <span id="discountError" class="error-message"></span>

        <label>Expiry Date</label>
        <input type="date" name="expiryDate" id="expiryDate" placeholder="Expiry Date" value="{{coupon.expiryDate}}">
        <span id="expiryDateError" class="error-message"></span>

        <label for="couponStatus">Coupon Status</label>
        <select class="form-control" id="couponStatus" name="isActive">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>

        <button type="submit">Edit Coupons</button>
    </form>
    <script>
      let exist=0
            async function validatecouponCode() {
        var couponCode = document.getElementById("couponCode").value;
        var couponCodeError = document.getElementById("couponCodeError");
        console.log(couponCode);
        try {
            const response = await fetch("/admin/CouponExist", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ couponCode,couponId:'{{coupon._id}}' })
            });

            const data = await response.json();

            if (data.exists) {
                couponCodeError.textContent = "Coupon code already exists.";
                document.getElementById("couponCode").classList.add('is-invalid');
                exist=1
            } else {
                couponCodeError.textContent = "";
                document.getElementById("couponCode").classList.remove('is-invalid');
                exist=0
            }
        } catch (error) {
            console.error("Error validating coupon code:", error);
        }
    }

        document.getElementById('couponForm').addEventListener('submit', function (event) {
            event.preventDefault();
            var form = event.target;
            var isValid = true;

            // Reset all error messages
            document.querySelectorAll('.error-message').forEach(function (element) {
                element.textContent = '';
            });

            // Reset invalid class
            form.querySelectorAll('.is-invalid').forEach(function (element) {
                element.classList.remove('is-invalid');
            });

            // Validate each input field
            var couponCode = document.getElementById('couponCode');
            var description = document.getElementById('description');
            var minPurchaseAmount = document.getElementById('minPurchaseAmount');
            var discount = document.getElementById('discount');
            var expiryDate = document.getElementById('expiryDate');

            if (!couponCode.value.trim()) {
                isValid = false;
                couponCode.classList.add('is-invalid');
                document.getElementById('couponCodeError').textContent = 'Coupon Code is required.';
            }

            if (!description.value.trim()) {
                isValid = false;
                description.classList.add('is-invalid');
                document.getElementById('descriptionError').textContent = 'Description is required.';
            }

            if (!minPurchaseAmount.value.trim() || minPurchaseAmount.value < 0) {
                isValid = false;
                minPurchaseAmount.classList.add('is-invalid');
                document.getElementById('minPurchaseAmountError').textContent = 'Min Purchase Amount must be a positive number.';
            }

            if (!discount.value.trim() || discount.value < 0 || discount.value > 100) {
                isValid = false;
                discount.classList.add('is-invalid');
                document.getElementById('discountError').textContent = 'Discount must be between 0 and 100.';
            }

            if (!expiryDate.value.trim()) {
                isValid = false;
                expiryDate.classList.add('is-invalid');
                document.getElementById('expiryDateError').textContent = 'Expiry Date is required.';
            }

            if (isValid) {
                if(exist==0){
          form.submit();
        }else{
          event.preventDefault()
        }
            }
        });
    </script>
</body>

</html>