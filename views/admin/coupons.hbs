<!-- Navbar End -->
 <div style="display: flex;flex-direction: column;">
            <form class="form-inline my-2 my-lg-0" style="display: flex;flex-direction: row;width: 30%;float: right;" id="searchForm">
    <input class="form-control mr-sm-2" id="searchInput" type="text" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0 mx-2" id="searchByIdButton" type="submit">Search</button>
</form>
<div style="display: flex; justify-content: flex-end;margin-top: 2%;">
            <a href="/admin/addCoupon" class="btn btn-success">Add Coupons</a>
            </div>
            </div>
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th scope="col">Index</th>
                        <th scope="col">Coupon Code</th>
                        <th scope="col">Description</th>
                        <th scope="col">Min Purchase Amount</th>
                        <th scope="col">Discount Percentage(%)</th>
                        <th scope="col">Status</th>
                        <th scope="col">Expiry</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each coupons}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{this.couponCode}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.minPurchaseAmount}}</td>
                        <td>{{this.discount}}</td>
                        <td>{{#if this.isActive}}Active{{else}}In Active{{/if}}</td>
                        <td>{{this.expiryDate}}</td>
                        <td>
                            <a href="/admin/edit-coupon?id={{this._id}}" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <a href="javascript:void(0);" onclick="confirmDelete('/admin/delete-coupon?id={{this._id}}')" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="pagination-controls">
                            {{#if (gt currentPage 1)}}
                            <a href="?page={{subtract currentPage 1}}"
                                class="btn btn-primary">Previous</a>
                            {{/if}}

                            {{#each (range 1 totalPages)}}
                            <a href="?page={{this}}"
                                class="btn btn-primary {{#if (eq this ../currentPage)}}active{{/if}}">
                                {{this}}
                            </a>
                            {{/each}}

                            {{#if (lt currentPage totalPages)}}
                            <a href="?page={{add currentPage 1}}" class="btn btn-primary">Next</a>
                            {{/if}}
                        </div>
        </div>

        <!-- Content End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
